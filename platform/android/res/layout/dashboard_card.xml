<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/entry_screen_open_document_card_view"
   style="@style/Widget.OpenDroidPDF.DashboardCard">
  <RelativeLayout
		  android:layout_width="match_parent"
		  android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        style="@style/Widget.OpenDroidPDF.DashboardCard.Image"
        android:src="@drawable/ic_open"/>
    <TextView
        android:id="@+id/title"
        style="@style/Widget.OpenDroidPDF.DashboardCard.Title"
        android:text=""
        android:layout_toEndOf="@id/image"
        android:layout_toRightOf="@id/image" />
    <TextView
        android:id="@+id/subtitle"
        style="@style/Widget.OpenDroidPDF.DashboardCard.Subtitle"
        android:text=""
        android:layout_below="@id/title"
        android:layout_alignStart="@id/title"
        android:layout_alignLeft="@id/title" />
  </RelativeLayout>
</androidx.cardview.widget.CardView>
