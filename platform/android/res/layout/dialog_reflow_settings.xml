<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/reflow_layout_locked_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/reflow_layout_locked_notice"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/reflow_label_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reflow_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reflow_value_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16" />

        <SeekBar
            android:id="@+id/reflow_seek_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/reflow_label_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reflow_margins"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reflow_value_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.0" />

        <SeekBar
            android:id="@+id/reflow_seek_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/reflow_label_line_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reflow_line_spacing"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reflow_value_line_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.0" />

        <SeekBar
            android:id="@+id/reflow_seek_line_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/reflow_label_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reflow_theme"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/reflow_radio_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/reflow_theme_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reflow_theme_light" />

            <RadioButton
                android:id="@+id/reflow_theme_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reflow_theme_dark" />

            <RadioButton
                android:id="@+id/reflow_theme_sepia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reflow_theme_sepia" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>
