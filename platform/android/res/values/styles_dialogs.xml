<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Widget.OpenDroidPDF.Dialog.Container" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingStart">@dimen/dialog_padding_horizontal</item>
    <item name="android:paddingEnd">@dimen/dialog_padding_horizontal</item>
    <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
    <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
  </style>

  <style name="Widget.OpenDroidPDF.Dialog.TextEntry" parent="@style/Widget.AppCompat.EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minLines">3</item>
    <item name="android:gravity">top</item>
    <item name="android:inputType">textMultiLine</item>
    <item name="android:paddingStart">@dimen/dialog_padding_horizontal</item>
    <item name="android:paddingEnd">@dimen/dialog_padding_horizontal</item>
    <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
    <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    <item name="android:minHeight">@dimen/dialog_text_min_height</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="Widget.OpenDroidPDF.Dialog.WebView" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:minHeight">@dimen/dialog_webview_min_height</item>
  </style>

  <style name="Widget.OpenDroidPDF.Dialog.Message" parent="@style/TextAppearance.AppCompat.Body1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:lineSpacingExtra">2dp</item>
  </style>

  <style name="Widget.OpenDroidPDF.Dialog.ProgressContainer" parent="Widget.OpenDroidPDF.Dialog.Container">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
    <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
  </style>

  <style name="Widget.OpenDroidPDF.Dialog.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:layout_marginBottom">0dp</item>
  </style>

  <style name="OpenDroidPDFBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/Widget.OpenDroidPDF.BottomSheet.Modal</item>
  </style>

  <style name="Widget.OpenDroidPDF.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@color/window_background</item>
  </style>
</resources>
